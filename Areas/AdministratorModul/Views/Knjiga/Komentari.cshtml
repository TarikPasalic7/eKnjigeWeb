

@model eKnjige.Areas.AdministratorModul.ViewModels.KomentariVM

@{
    ViewData["Title"] = "Komentari";


 
}
<section id="main-content">
    <section class="wrapper">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="text-primary">@Model.Knjiga</h2>
            </header>
            <section class="panel-body">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Datum komentara</th>
                            <th>Korisnik</th>
                            <th>Komentar</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.rows)
                        {
                            <tr>
                                <td>@x.Datum</td>
                                <td>@x.Korisnik</td>
                                <td>@x.Komentar</td>
                                <td><a asp-action="ObrisiKomentar" asp-controller="Knjiga" asp-route-KomentarID="@x.KomentarID" class="btn btn-danger">Obriši</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
                <a asp-action="PrikaziKnjige" class="btn btn-danger"><i class="	fa fa-chevron-left"></i> Nazad</a>
            </section>
        </section>
    </section>
</section>



