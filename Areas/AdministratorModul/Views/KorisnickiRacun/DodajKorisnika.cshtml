@using eKnjige.Areas.AdministratorModul.ViewModels
@model KorisniciDodajVM
@{
    ViewData["Title"] = "DodajKorisnika";
}



<section id="main-content">
    <section class="wrapper">
        <section class="panel">
            <header class="panel-heading">
                <h2>Dodaj novog korisnika</h2>
                <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
            </header>



            
            <div class="panel-body">
                <form asp-action="DodajKorisnika">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <label asp-for="Ime" class="control-label"></label>
                    <input asp-for="Ime" class="form-control" />
                    <label asp-for="Prezime" class="control-label"></label>
                    <input asp-for="Prezime" class="form-control" />
                    <label asp-for="Jmbg" class="control-label"></label>
                    <input asp-for="Jmbg" class="form-control" />
                    <label asp-for="DatumRodjenja" class="control-label"></label>
                    <input asp-for="DatumRodjenja" class="form-control" />
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <label asp-for="KorisnickoIme" class="control-label"></label>
                    <input asp-for="KorisnickoIme" class="form-control" />
                    <label asp-for="Lozinka" class="control-label"></label>
                    <input asp-for="Lozinka" class="form-control" />
                    <label asp-for="Spol" class="control-label"></label>
                    <select asp-for="@Model.SpolID" class="form-control" asp-items="@Model.Spol"><option>Odaberi spol</option></select>
                    <label asp-for="Grad" class="control-label"></label>
                    <select asp-for="@Model.GradID" class="form-control" asp-items="@Model.Grad"><option>Odaberi grad</option></select><br />
                    <input type="submit" value="Spasi promjene" class="btn btn-success" />
                </form>
            </div>


            <div>
                <a asp-action="Korisnici" class="btn btn-danger"><i class="	fa fa-chevron-left"></i> Nazad</a>
            </div>
        </section>
    </section>
</section>
